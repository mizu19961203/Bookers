<h1>Editing Book</h1>

<%= form_for(@book ) do |f| %>

   <h4>Title</h4>
   <%= f.text_field :title %>

   <h4>Body</h4>
   <%= f.text_area :body %>

   
   <%= f.submit 'Update Book' %>

    <table>
 	 <tr>
     	<td><%= link_to 'Show', book_path%></td>
     	<td> | </td>
     	<td><%= link_to 'Back', books_path %></td>
     </tr>
  </table>

  <%= h(flash[:success]) %>

<% end %>

